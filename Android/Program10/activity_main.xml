<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="5"
    android:columnCount="4"
    android:layout_gravity="center"
    android:layout_margin="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Number"
        android:id="@+id/result"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_columnSpan="4"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b1"
        android:text="1"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b2"
        android:text="2"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b3"
        android:text="3"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/badd"
        android:text="+"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b4"
        android:text="4"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b5"
        android:text="5"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b6"
        android:text="6"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/bsub"
        android:text="-"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b7"
        android:text="7"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b8"
        android:text="8"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b9"
        android:text="9"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/bmul"
        android:text="*"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/bclr"
        android:text="CLR"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/b0"
        android:text="0"
        android:textSize="25sp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/bdiv"
        android:text="/"
        android:textSize="25sp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/beq"
        android:text="="
        android:textSize="25sp"/>

</GridLayout>